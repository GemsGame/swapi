{
    "extends": ["airbnb"],
    "plugins": [
        // ...
        "react-hooks"
      ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "linebreak-style": 0,
        "no-unused-vars":0,
        "import/prefer-default-export": 0,
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    },
    "settings": {
        "import/ignore": "node_modules"
    }
}